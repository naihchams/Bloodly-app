<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/launch_screen_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
    />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Blood. Rewrite someone’s story."
        android:fontFamily="@font/poppins_semibold"
        android:textSize="30sp"
        android:textColor="#BB1F1F"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
    />
    <TextView
        android:id="@+id/textViewRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In every drop of blood, there’s a heartbeat of humanity. Join Pulsease, and let’s embody the spirit of giving, together!"
        android:fontFamily="@font/poppins_regular"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login"
            android:background="@drawable/button_login_background"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="20px"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register"
            android:background="@drawable/button_register_background"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="20px"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
